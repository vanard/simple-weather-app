<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:padding="16dp"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" android:id="@+id/item_icon"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="tuesday"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/item_day" android:layout_weight="1"
            android:layout_marginStart="8dp"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="29"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/item_degree" android:layout_weight="1"
            android:textAlignment="viewEnd"/>
</LinearLayout>
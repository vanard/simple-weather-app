<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detailweather.DetailWeatherActivity" android:padding="16dp">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_day" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:textStyle="bold" android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:id="@+id/detail_icon" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/detail_degree"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/detail_day"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_condition"
            app:layout_constraintTop_toBottomOf="@+id/detail_icon"
            app:layout_constraintStart_toStartOf="@+id/detail_icon"
            app:layout_constraintEnd_toEndOf="@+id/detail_icon" android:layout_marginTop="8dp" android:textSize="18sp"
    />
    <TextView
            android:text="Precipitation:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/detail_condition" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="18sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_precipitation"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
            android:textSize="18sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="Humidity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="16dp" android:textSize="18sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_humidity"
            app:layout_constraintBottom_toBottomOf="@+id/textView5" app:layout_constraintTop_toTopOf="@+id/textView5"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:textColor="@android:color/black" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_degree"
            app:layout_constraintTop_toBottomOf="@+id/detail_day" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/detail_icon"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.5" android:textSize="36sp"
            android:layout_marginTop="16dp" android:textColor="@android:color/black" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_condition"/>
    <TextView
            android:text="Wind:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView5"
            android:textSize="18sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_wind"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="8dp"
            android:textSize="18sp" android:textColor="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>